<div class="row-fluid contact clearfix">
  <div class="col-sm-6 ask">
    <h3>ask about availability</h3>
    <%= form_tag do %>
      <p><input type="email" name="email" placeholder="your email" /></p>
      <p><input type="date" name="checkin" placeholder="arrive" /></p>
      <p><input type="date" name="checkout" placeholder="depart" /></p>
      <p><select>
           <option>exact dates only</option>
           <option>can be another weekend</option>
           <option>can be another time within a few days</option>
           <option>can be another time within a few weeks</option>
         </select></p> 
    <% end %>
  </div>
  <div class="col-sm-6 availability">
